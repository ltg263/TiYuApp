<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dangqian"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_dialog_jindu_3" />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/color_999999"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/tv_no"
        android:background="#80C1D8F4"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/tv_1"
            android:background="@drawable/shape_radius_fff_5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_name"
                android:layout_alignBottom="@id/tv_type_1"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/iv_icon"
                android:paddingTop="5dp"
                android:text="课程名称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iv_icon"
                android:maxLines="1"
                android:text="每组4人  |  共4个小节"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_type_1"
                android:layout_alignStart="@id/iv_icon"
                android:layout_alignEnd="@id/iv_icon"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="4*2*2"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_10" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rl"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_radius_2f3079"
            android:drawableStart="@drawable/ic_dialog_1"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_radius_fcc717"
            android:drawableStart="@drawable/ic_dialog_2"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="1dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@id/iv_dou"
        android:layout_marginEnd="10dp"
        android:scaleType="center"
        android:src="@drawable/ic_line_stroke" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="1dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@id/iv_dou"
        android:layout_alignBottom="@id/rl1"
        android:layout_marginEnd="10dp"
        android:scaleType="center"
        android:src="@drawable/ic_line_stroke" />

    <ImageView
        android:id="@+id/iv_dou"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-10dp"
        android:layout_toEndOf="@id/tv_no"
        android:scaleType="center"
        android:src="@drawable/btn_dialog_jindu" />
</RelativeLayout>