<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shap"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:text="您确定要退出吗？"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/ll_duilie"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_dl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="队列数"
            android:padding="10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />
        <EditText
            android:id="@+id/et_dl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入每个队列的人数"
            android:inputType="number"
            android:maxLength="2"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            android:paddingVertical="@dimen/dp_10"
            android:background="@null"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_suanle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/biankuang_lose_login"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#2c8be2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bt_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#2c8be2"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>