<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_yy_ff_all_6"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_name"
        android:scaleType="fitXY"
        android:layout_alignBottom="@id/tv_type_2"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_icon"
        android:paddingTop="5dp"
        android:text="--"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_type_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_icon"
        android:text="--"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_type_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type_1"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_icon"
        android:paddingBottom="5dp"
        android:text="--"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_10" />


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/tv_type_2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_kcxq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/sp_14"
            android:text="课程详情"
            android:textColor="#A3A3A3" />
        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/tv_kssk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/sp_14"
            android:text="开始上课"
            android:textColor="@color/color_text_theme" />


    </LinearLayout>

</RelativeLayout>